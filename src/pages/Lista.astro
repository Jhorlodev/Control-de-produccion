---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase.jsx';

// Fetch de datos desde Supabase
const { data, error } = await supabase
  .from('control')
  .select('*');

if (error) {
  console.error('Error fetching data:', error);
}

// Calcular totales si hay datos
let totalRequerimiento = 0;
let totalHecho = 0;
let totalRestan = 0;

if (data) {
  totalRequerimiento = data.reduce((sum, item) => sum + (item.requerimiento || 0), 0);
  totalHecho = data.reduce((sum, item) => sum + (item.hecho || 0), 0);
  totalRestan = totalRequerimiento - totalHecho;
}
---

<Layout title="listado">
  <div class="containerp">
    <div class="container">
      <h1>Lista de Datos</h1>

<table>
  <thead>
    <tr>
      <th>Descripci√≥n</th>
      <th>Qty Total</th>
      <th>Qty Parcial</th>
      <th>Restan</th>
      <th>Fecha</th>
    </tr>
  </thead>
  <tbody>
    {data?.map((item) => (
      <tr>
        <td>{item.producto}</td>
        <td>{item.requerimiento}</td>
        <td>{item.hecho}</td>
        <td>{item.requerimiento - item.hecho}</td> {/* Calcula lo que falta */}
        <td>{item.fecha}</td>
      </tr>
    ))}
    {/* Fila de totales */}
  </tbody>
</table>  
</div>
  </div>
</Layout>

